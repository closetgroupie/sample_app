<% provide(:title, 'Sign Up') %>
<h1>fill out the form below to join us at sewingly, we'll be waiting!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "full name" %>
      <%= f.text_field :name %>

      <%= f.label :email, "email address" %>
      <%= f.text_field :email %>

      <%= f.label :password, "foolproof password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "confirm password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "create my sewingly account", class: "btn" %>
    <% end %>
  </div>
</div>