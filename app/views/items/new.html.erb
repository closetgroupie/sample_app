<% provide(:title, 'Add Item') %>
<h1>add item to your booth</h1>


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@item, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :name, "item name" %>
      <%= f.text_field :name, class: 'form-control' %>

      
      <%= f.label :category_id, "choose category" %>
      <%= f.collection_select :category_id, Category.all, :id, :name %> 

      <%= f.label :price, "price" %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.label :description, "item description" %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png'  %>
      <%= f.file_field :image_two, accept: 'image/jpeg,image/gif,image/png'  %>

      <%= f.submit "add item", class: "btn" %>


    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#item_image').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum image size is 5MB. Please choose a smaller image.');
    }
  });
</script>
  

  