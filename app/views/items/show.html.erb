<% provide(:title, "Item Details") %>

<div class="container item-page-container">
	<div class = "row">
		<div class="col-md-7">
      		<%= image_tag @item.image_url() if @item.image? %>
    	</div>
	
		<div class="col-md-5">
			<h3><%= @item.name %></h3>
			<h4><%= number_to_currency @item.price %> </h4>
			<p><%= @item.description %></p>
			<%= link_to "Buy Now with PayPal", '#', class: "btn col-md-7", id: "paypal-buy-btn"%>


			<div class="col-md-12" id="item-maker-details">
				<h3>made by <%= @item.user.name %><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></h3>
    			<p><%= @item.description %></p>
   			</div>

   			<div class="col-sm-12 col-md-12" id="item-booth-details">
				<h3>from booth <%= @item.user.booth.name %><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></h3>
			</div>
		</div>

		<span class="divider">

		<div class="col-md-7" id="item-page-image">
      		 <%= image_tag @item.image_two_url() if @item.image_two? %>
      	</div>
      	 <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'sewingly'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
</div>



	




